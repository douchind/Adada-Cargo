	var redMarker = L.AwesomeMarkers.icon({
		markerColor: 'red'
	});
	 var yellowMarker = L.AwesomeMarkers.icon({
		markerColor: 'orange'
	 });
	var blueMarker = L.AwesomeMarkers.icon({
		markerColor: 'blue'
	 });
      @if (Model.Model.Cabines != null)
      {
          foreach (var cabine in Model.Model.Cabines)
          {
              @:points.push({
              @:lat: '@cabine.Lat',
              @:lng: '@cabine.Long',
              @:name: '@Html.Raw(cabine.Name)',
              @:address: '@Html.Raw(cabine.Description)',
              @:id : '@cabine.Id',
              @:description: '@Html.Raw(cabine.Description)'
              @:});


			  @: var actualMarker = blueMarker;
			  @: var actualMessage = "<h3>Uygun</h3>";

			  if (cabine.IsAlmostFull == true)
			  {
				  @:actualMarker = yellowMarker;
				  @:actualMessage = "<h3>Dolmak Üzere</h3>";

			  }

			  if (cabine.IsFull == true)
			  {
				  @:actualMarker = redMarker;
				  @:actualMessage = "<h3>Dolu</h3>";

			  }
              @:L.marker([@cabine.Lat, @cabine.Long],{icon:actualMarker}).bindTooltip(actualMessage).on('click', locker1labelOnClick).addTo(lockermap1);
              @:L.marker([@cabine.Lat, @cabine.Long],{icon:actualMarker}).bindTooltip(actualMessage).on('click', locker2labelOnClick).addTo(lockermap2);
          }
      }

</script>

